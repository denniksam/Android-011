<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calc_background"
    tools:context=".CalcActivity">

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text=""
        tools:text="25 + 61 ="
        android:textColor="@color/calc_history"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text=""
        tools:text="86"
        android:textColor="@color/calc_result"
        android:textSize="64sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <Button
                android:id="@+id/calc_btn_percent"
                style="@style/calc_btn_fn_style"
                android:text="@string/calc_btn_percent_text" />
            <Button
                android:id="@+id/calc_btn_ce"
                style="@style/calc_btn_fn_style"
                android:text="@string/calc_btn_ce_text" />
            <Button
                android:id="@+id/calc_btn_clear"
                style="@style/calc_btn_fn_style"
                android:text="@string/calc_btn_clear_text" />
            <Button
                android:id="@+id/calc_btn_backspace"
                style="@style/calc_btn_fn_style"
                android:text="@string/calc_btn_backspace_text" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <ImageButton
                android:id="@+id/calc_btn_inverse"
                style="@style/calc_btn_fn_style"
                android:src="@drawable/inv"
                android:scaleType="fitCenter"
                android:padding="25dp" />
            <ImageButton
                android:id="@+id/calc_btn_square"
                style="@style/calc_btn_fn_style"
                android:src="@drawable/sqr"
                android:scaleType="fitCenter"
                android:padding="25dp"/>
            <ImageButton
                android:id="@+id/calc_btn_sqrt"
                style="@style/calc_btn_fn_style"
                android:src="@drawable/sqrt"
                android:scaleType="fitCenter"
                android:padding="25dp" />
            <Button
                android:id="@+id/calc_btn_divide"
                style="@style/calc_btn_fn_style"
                android:text="@string/calc_btn_divide_text" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <Button
                android:id="@+id/calc_btn_7"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_7_text" />
            <Button
                android:id="@+id/calc_btn_8"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_8_text" />
            <Button
                android:id="@+id/calc_btn_9"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_9_text" />
            <Button
                android:id="@+id/calc_btn_multiply"
                style="@style/calc_btn_fn_style"
                android:text="@string/calc_btn_multiplication_text" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <Button
                android:id="@+id/calc_btn_4"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_4_text" />
            <Button
                android:id="@+id/calc_btn_5"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_5_text" />
            <Button
                android:id="@+id/calc_btn_6"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_6_text" />
            <Button
                android:id="@+id/calc_btn_minus"
                style="@style/calc_btn_fn_style"
                android:text="@string/calc_btn_minus_text" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <Button
                android:id="@+id/calc_btn_1"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_1_text" />
            <Button
                android:id="@+id/calc_btn_2"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_2_text" />
            <Button
                android:id="@+id/calc_btn_3"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_3_text" />
            <Button
                android:id="@+id/calc_btn_plus"
                style="@style/calc_btn_fn_style"
                android:text="@string/calc_btn_plus_text" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/calc_btn_plus_minus"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_plus_minus_text" />
            <Button
                android:id="@+id/calc_btn_0"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_0_text" />
            <Button
                android:id="@+id/calc_btn_comma"
                style="@style/calc_btn_op_style"
                android:text="@string/calc_btn_comma_text" />
            <Button
                android:id="@+id/calc_btn_equal"
                style="@style/calc_btn_eq_style"
                android:text="@string/calc_btn_equal_text" />
        </TableRow>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>